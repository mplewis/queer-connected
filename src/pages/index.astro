---
import { Button } from '../components/Button';
import { Container } from '../components/Container';
import { Grid } from '../components/Grid';
import Hero from '../components/Hero.astro';
import { Responsive } from '../components/Responsive';
import { Section } from '../components/Section';
import { Stack } from '../components/Stack';
import { H1, H2, P } from '../components/Typography';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home" description="Building community connections and support">
  <Hero
    title="Queer & Connected"
    subtitle="Building community connections and support for LGBTQ+ individuals."
    description="We create safe spaces where everyone can be their authentic selves. Join us in celebrating diversity and fostering meaningful relationships."
  />

  <Section paddingY="none">
    <Container size="lg" className="py-8">
      <Stack gap="sm">
        <section>
          <H1 client:load className="mb-4">Container Sizes</H1>
          <Stack gap="md">
            <div class="bg-blue-100 p-4 rounded">
              <P client:load className="text-gray-700">Current: Large container (max-w-screen-lg)</P>
            </div>
          </Stack>
        </section>

        <section>
          <H1 client:load className="mb-4">Button Variants</H1>
          <Stack direction="responsive" gap="md" align="center" wrap="wrap">
            <Button variant="primary" size="sm" client:load>Primary Small</Button>
            <Button variant="secondary" size="md" client:load>Secondary Medium</Button>
            <Button variant="danger" size="lg" client:load>Danger Large</Button>
            <Button variant="ghost" client:load>Ghost Default</Button>
          </Stack>
        </section>

        <section>
          <H1 client:load className="mb-4">Responsive Grid</H1>
          <Grid cols={3} gap="md">
            <div class="bg-white p-6 rounded-lg shadow">
              <H2 client:load className="mb-2">Card 1</H2>
              <P client:load className="text-gray-600">
                This grid adapts: 1 column on mobile, 2 on small screens, 3 on large screens.
              </P>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
              <H2 client:load className="mb-2">Card 2</H2>
              <P client:load className="text-gray-600">Resize your browser to see the responsive behavior.</P>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
              <H2 client:load className="mb-2">Card 3</H2>
              <P client:load className="text-gray-600">Built with CVA for type-safe variant props.</P>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
              <H2 client:load className="mb-2">Card 4</H2>
              <P client:load className="text-gray-600">Fully customizable with className prop.</P>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
              <H2 client:load className="mb-2">Card 5</H2>
              <P client:load className="text-gray-600">Consistent spacing using gap variants.</P>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
              <H2 client:load className="mb-2">Card 6</H2>
              <P client:load className="text-gray-600">Perfect for dashboards and galleries.</P>
            </div>
          </Grid>
        </section>

        <section>
          <H1 client:load className="mb-4">Stack Layouts</H1>
          <Stack gap="lg">
            <div class="bg-white p-4 rounded-lg shadow">
              <P client:load className="mb-2">Vertical Stack (default)</P>
              <Stack gap="sm">
                <div class="bg-purple-100 p-3 rounded">Item 1</div>
                <div class="bg-purple-100 p-3 rounded">Item 2</div>
                <div class="bg-purple-100 p-3 rounded">Item 3</div>
              </Stack>
            </div>

            <div class="bg-white p-4 rounded-lg shadow">
              <P client:load className="mb-2">Horizontal Stack</P>
              <Stack direction="row" gap="md" wrap="wrap">
                <div class="bg-green-100 p-3 rounded">Item 1</div>
                <div class="bg-green-100 p-3 rounded">Item 2</div>
                <div class="bg-green-100 p-3 rounded">Item 3</div>
                <div class="bg-green-100 p-3 rounded">Item 4</div>
              </Stack>
            </div>

            <div class="bg-white p-4 rounded-lg shadow">
              <P client:load className="mb-2">Responsive Stack (column â†’ row)</P>
              <Stack direction="responsive" gap="md">
                <div class="bg-orange-100 p-3 rounded flex-1">Stacks vertically on mobile</div>
                <div class="bg-orange-100 p-3 rounded flex-1">Horizontal on larger screens</div>
              </Stack>
            </div>
          </Stack>
        </section>

        <section>
          <H1 client:load className="mb-4">Responsive Visibility</H1>
          <Stack gap="md">
            <Responsive show="mobile" client:load>
              <div class="bg-red-100 p-4 rounded text-red-900">
                ðŸ“± Mobile only: Visible only on mobile screens
              </div>
            </Responsive>
            <Responsive hide="mobile" client:load>
              <div class="bg-blue-100 p-4 rounded text-blue-900">
                ðŸ’» Hidden on mobile: Visible on sm screens and up
              </div>
            </Responsive>
            <Responsive hide="md" client:load>
              <div class="bg-green-100 p-4 rounded text-green-900">
                ðŸ“Š Hidden on md+: Visible only on mobile and small screens
              </div>
            </Responsive>
          </Stack>
        </section>

        <section>
          <H1 client:load className="mb-4">Complex Layout Example</H1>
          <div class="bg-white p-6 rounded-lg shadow">
            <Stack gap="lg">
              <Stack direction="responsive" justify="between" align="center">
                <div>
                  <H2 client:load>Dashboard Header</H2>
                  <P client:load className="text-gray-600">Combining multiple layout components</P>
                </div>
                <Stack direction="row" gap="sm">
                  <Button variant="secondary" size="sm" client:load>Settings</Button>
                  <Button variant="primary" size="sm" client:load>Create</Button>
                </Stack>
              </Stack>

              <Grid cols={4} gap="md">
                <div class="bg-gradient-to-br from-purple-500 to-purple-600 p-4 rounded text-white">
                  <P client:load className="opacity-90">Total Users</P>
                  <P client:load className="mt-1">1,234</P>
                </div>
                <div class="bg-gradient-to-br from-blue-500 to-blue-600 p-4 rounded text-white">
                  <P client:load className="opacity-90">Revenue</P>
                  <P client:load className="mt-1">$12.5k</P>
                </div>
                <div class="bg-gradient-to-br from-green-500 to-green-600 p-4 rounded text-white">
                  <P client:load className="opacity-90">Active</P>
                  <P client:load className="mt-1">892</P>
                </div>
                <div class="bg-gradient-to-br from-orange-500 to-orange-600 p-4 rounded text-white">
                  <P client:load className="opacity-90">Growth</P>
                  <P client:load className="mt-1">+23%</P>
                </div>
              </Grid>
            </Stack>
          </div>
        </section>
      </Stack>
    </Container>
  </Section>
</Layout>
