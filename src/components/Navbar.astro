---
import { SITE_NAME } from '../constants';
import { Container } from './Container';
---

<nav class="navbar">
  <Container size="lg">
    <div class="navbar__inner">
      <a href="/" class="navbar__logo">{SITE_NAME}</a>
      <ul class="navbar__links">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/resources">Resources</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </Container>
</nav>

<style>
  .navbar {
    background-color: #ffffff;
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 0;
  }

  .navbar__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .navbar__logo {
    font-size: 1.25rem;
    font-weight: 600;
    color: #111827;
    text-decoration: none;
  }

  .navbar__logo:hover {
    color: #2563eb;
  }

  .navbar__links {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .navbar__links a {
    color: #6b7280;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.15s ease;
  }

  .navbar__links a:hover {
    color: #111827;
  }

  @media (max-width: 640px) {
    .navbar__inner {
      flex-direction: column;
      gap: 1rem;
    }

    .navbar__links {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
